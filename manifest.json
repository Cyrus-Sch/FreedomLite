{
    "name": "Freedom Lite",
    "description": "Block distracting sites you chooseâ€”on demand.",
    "version": "1.0.0",
    "manifest_version": 3,
  
    "permissions": [
      "storage",
      "declarativeNetRequest",
      "declarativeNetRequestWithHostAccess",
      "activeTab",
	  "sidePanel"
    ],
    "host_permissions": ["<all_urls>"],
  
    "background": {
      "service_worker": "background.js"
    },
  
    "action": {
      "default_title": "Freedom Lite",
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icons/icon48.png",
        "72": "icons/icon72.png"
      }
    },
  
    "icons": {
      "96": "icons/icon96.png",
      "144": "icons/icon144.png",
      "192": "icons/icon196.png"
    },
    "web_accessible_resources": [
    {
      "resources": ["blocked.html","/blocked.js"],
      "matches": ["<all_urls>"]
    }],
    "options_page": "dynamicOptions.html",
    "side_panel": {
    "default_path": "dynamicOptions.html"
  }
  }
  
